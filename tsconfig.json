{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./typings/global"
    ],
    "module": "commonjs",
    "target": "es2015",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}