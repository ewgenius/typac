{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "build", "tests"]
}
